<%= form_tag(do_login_admin_users_path, method: :post, role: "form", class: "form-validation") do %>

  <div class="mb-5">
    <label for="email">E-mail</label>
    <%= email_field :email, nil, class: "form-control" %>
  </div>

  <div class="mb-5">
    <label for="senha">Senha</label>
    <%= password_field :senha, nil, class: "form-control" %>
  </div>

  <%= submit_tag "Entrar", class: "btn btn-primary" %>

<% end %>